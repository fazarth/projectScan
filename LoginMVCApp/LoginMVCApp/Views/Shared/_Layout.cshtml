<script>
    document.addEventListener('DOMContentLoaded', function() {
        var showReturnConfirmation = '@(TempData["ShowReturnConfirmation"] != null ? TempData["ShowReturnConfirmation"].ToString() : "false")';
        var existingStatus = '@(TempData["ExistingStatus"]?.ToString() ?? "")';
        var newStatus = '@(TempData["NewStatus"]?.ToString() ?? "")';
        var ngDetailId = '@(TempData["NgDetailId"]?.ToString() ?? "")';
        var errorMessage = '@(TempData["ErrorMessage"]?.ToString() ?? "")';

        // Tampilkan pesan error jika ada
        if (errorMessage) {
            alert(errorMessage);
        }

        if (showReturnConfirmation === 'true') {
            const statusInput = document.getElementById('statusInput');
            const ngDetailInput = document.getElementById('ngDetailInput');
            // Prioritaskan NewStatus jika ada, kalau tidak gunakan ExistingStatus
            statusInput.value = newStatus || existingStatus;
            console.log("Status set from TempData: " + statusInput.value);

            if (ngDetailId) {
                ngDetailInput.value = ngDetailId;
                console.log("NgDetailId set from TempData: " + ngDetailId);
            }

            // Tampilkan popup
            var modal = new bootstrap.Modal(document.getElementById('returnConfirmationModal'));
            modal.show();
        }
    });

    function updateReturnStatus() {
        const isReturnCheckbox = document.getElementById('isReturn');
        const isReturnInput = document.getElementById('isReturnInput');

        isReturnInput.value = isReturnCheckbox.checked.toString();
    }

    function updateOppositeShit() {
        const isOppositeShitCheckbox = document.getElementById('isOppositeShit');
        const isOppositeShitInput = document.getElementById('isOppositeShitInput');

        isOppositeShitInput.value = isOppositeShitCheckbox.checked.toString();
    }

    function disableButtonsInSection(sectionId) {
        const section = document.getElementById(sectionId);
        const buttons = section.querySelectorAll("button");

        // Menonaktifkan semua tombol di dalam section
        buttons.forEach(btn => {
            btn.disabled = true;
        });
    }

    function submitStatus(status) {
        document.getElementById("statusInput").value = status;

        const statusInput = document.getElementById('statusInput');
        const isReturnInput = document.getElementById('isReturnInput');
        const isOppositeShitInput = document.getElementById('isOppositeShitInput');
        const existingStatus = '@(TempData["ExistingStatus"]?.ToString() ?? "")';

        if (existingStatus && status === existingStatus) {
            alert(`Tidak dapat menggunakan status ${status} karena sama dengan status sebelumnya.`);
            return;
        }

        if (status === "NG") {
            disableButtonsInSection("NG-section");
            disableButtonsInSection("OK-section");

            // Reset NgDetailId dan tampilkan kategori
            selectedNgDetailId = null;
            document.getElementById("ngDetailInput").value = "";
            document.getElementById("ng-section").style.display = "block";
            document.getElementById("category-section").style.display = "block"; // Tampilkan kategori
            document.getElementById("ng-category-container").style.display = "flex"; // Tampilkan kategori container
            document.getElementById("sub-category-section").style.display = "none"; // Sembunyikan subkategori
            document.getElementById("cancelBtn").style.display = "block"; // Tampilkan tombol back
            document.getElementById("confirmBtn").style.display = "none"; // Sembunyikan tombol confirm
            document.getElementById("backBtn").style.display = "none"; // Sembunyikan tombol confirm
            return;
        }

        document.getElementById("submitForm").submit(); // Submit form
    }      

    function confirmReturn() {
        const isReturnInput = document.getElementById('isReturnInput');
        const statusInput = document.getElementById('statusInput');
        const ngDetailId =  document.getElementById("ngDetailInput");

        isReturnInput.value = 'true';

        // Validasi: Pastikan status tidak kosong
        if (!statusInput.value) {
            alert("Status tidak ditemukan. Harap pilih status (OK, POLESH, atau NG) sebelum mengonfirmasi barang balikan.");
            return;
        }

        if (statusInput.value === "NG" && (!ngDetailId.value || ngDetailId.value === "")) {
            alert("Detail NG harus dipilih untuk status NG!");
            return;
            console.log("NG DETAIL RETURN, " + ngDetailId.value);
        }

        console.log("Submitting form with status: " + statusInput.value + ", isReturn: " + isReturnInput.value);
        document.getElementById('submitForm').submit();
    }

    function printQRCodePdf() {
        const invId = '@ViewBag.invDbIdInv';
        const inventoryId = document.querySelector('input[name="InventoryId"]').value;
        const project = '@ViewBag.Project';
        const color = '@ViewBag.Warna'; 
        const robotSelect = document.getElementById("robotSelect");
        const selectedRobotValue = robotSelect.value;
        const selectedRobotName = robotSelect.options[robotSelect.selectedIndex]?.text || "";
        const jumlahQrInput = document.getElementById("jumlahQrInput");
        const jumlahQr = parseInt(jumlahQrInput.value);

        // Validasi
        if (!invId) {
            alert("Scan Inventory ID terlebih dahulu.");
            return;
        }
        if (!project || !color) {
            alert("Data Project atau Warna tidak lengkap.");
            return;
        }
        if (!selectedRobotValue || !selectedRobotName) {
            alert("Pilih Nama Robot terlebih dahulu untuk Print PDF QR.");
            return;
        }
        if (isNaN(jumlahQr) || jumlahQr <= 0) {
            alert("Jumlah QR harus angka positif.");
            return;
        }

        // Buat form dinamis
        const form = document.createElement('form');
        form.method = 'post';
        form.action = '@Url.Action("PrintQrPdf", "Checker1")';
        form.target = '_blank';

        // Tambahkan hidden inputs
        const inputs = [
            { name: 'invId', value: invId },
            { name: 'inventoryId', value: inventoryId },
            { name: 'project', value: project },
            { name: 'color', value: color },
            { name: 'robot', value: selectedRobotName },
            { name: 'jumlahQr', value: jumlahQr },
            { name: 'robotId', value: selectedRobotValue}
        ];

        inputs.forEach(input => {
            const inputElement = document.createElement('input');
            inputElement.type = 'hidden';
            inputElement.name = input.name;
            inputElement.value = input.value;
            form.appendChild(inputElement);
        });

        // Submit form
        document.body.appendChild(form);
        form.submit();
        document.body.removeChild(form);
    }
</script>
