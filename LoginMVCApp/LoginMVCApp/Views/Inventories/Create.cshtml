@model LoginMVCApp.Models.Inventories

@{
    ViewData["Title"] = "Create";
    var fullname = Context.Session.GetString("nama") ?? "system";
}


<h1>Create</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <input asp-for="Project" class="form-control" />
                <span asp-validation-for="Project" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvId" class="control-label"></label>
                <input asp-for="InvId" class="form-control" />
                <span asp-validation-for="InvId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warna" class="control-label"></label>
                <input asp-for="Warna" class="form-control" />
                <span asp-validation-for="Warna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipe" class="control-label"></label>
                <input asp-for="Tipe" class="form-control" />
                <span asp-validation-for="Tipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartNo" class="control-label"></label>
                <input asp-for="PartNo" class="form-control" />
                <span asp-validation-for="PartNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartName" class="control-label"></label>
                <input asp-for="PartName" class="form-control" />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
