@model List<LoginMVCApp.Models.Inventories>
@{
    ViewData["Title"] = "Manajemen Inventori";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manajemen Inventori</h2>
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
                @TempData["success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Tambah Data
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>No</th>
                        <th>Project</th>
                        <th>Inventory ID</th>
                        <th>Type</th>
                        <th>Color</th>
                        <th>Part Number</th>
                        <th>Part Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var inv = Model[i];
                        <tr>
                            <td class="text-center">@(@i + 1)</td>
                            <td>@inv.Project</td>
                            <td>@inv.InvId</td>
                            <td>@inv.Tipe</td>
                            <td>@inv.Warna</td>
                            <td>@inv.PartNo</td>
                            <td>@inv.PartName</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@inv.Id" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@inv.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-danger"
                                   data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </td>
                        </tr>

                    <!-- Modal Delete -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Penghapusan</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                        <p>Apakah Anda yakin ingin menghapus data @inv.InvId? Tindakan ini tidak dapat dibatalkan.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                                    <form method="post" asp-action="Delete" asp-route-id="@inv.Id">
                                        <button type="submit" class="btn btn-danger">Hapus</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Belum ada data inventori yang tersedia.
        </div>
    }
</div>
