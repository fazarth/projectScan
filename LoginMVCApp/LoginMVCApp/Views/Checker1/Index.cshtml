@model LoginMVCApp.ViewModels.InventoryTransactionViewModel

@{
    ViewData["Title"] = "Checker Line - Scan Inventory";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <form method="post" asp-action="ScanInventory1" class="d-flex mb-3">
                <input type="text" name="inventoryId" class="form-control me-2" placeholder="Scan atau ketik Inventory ID" autofocus required />
                <button type="submit" class="btn btn-primary" style="width: 120px;">SCAN</button>
            </form>
        </div>
    </div>

    @if (Model != null)
    {
        var data = Model.Inventory ?? Model.Transaction?.Inventory;
        if (data != null)
        {
            <form method="post" asp-action="SubmitTransaction" id="submitForm">
                <input type="hidden" name="InventoryId" value="@(Model.Inventory?.InvId ?? Model.Transaction?.Barcode)" />
                <input type="hidden" name="InvId" value="@(Model.Inventory?.Id ?? Model.Transaction?.Id)" />
                <input type="hidden" id="statusInput" name="status" value="@(TempData["NewStatus"]?.ToString() ?? TempData["ExistingStatus"]?.ToString() ?? "")" />
                <input type="hidden" id="isReturnInput" name="isReturn" value="false" />
                <input type="hidden" id="isOppositeShitInput" name="isOppositeShit" value="false" />
                <input type="hidden" id="selectedRobotId" name="RobotId" value="" />
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm bg-dark border-1">
                            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                <h4 class="mb-0 fw-bold text-uppercase" style="margin-left: 33%;">@data.PartName - @data.Tipe</h4>
                                <div class="ms-auto">
                                    <span class="bg-light text-dark fw-bold px-3 py-1 border border-dark rounded fs-4">@data.Project</span>
                                </div>
                            </div>
                            <div class="card-body" style="background-color:lightblue">
                                <div class="row">
                                    <div class="col-md-8">
                                        <strong><h5>Inventory ID: <span>@(Model.Inventory?.InvId ?? Model.Transaction?.Barcode)</span></h5></strong>
                                    </div>
                                    <div class="col-md-2">
                                        <strong><h5>Type: <span>@data.Tipe</span></h5></strong>
                                    </div>
                                    <div class="col-md-2">
                                        <strong><h5>Color: <span>@data.Warna</span></h5></strong>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    @if (Model.Inventory != null)
                                    {
                                        <div class="col-md-9">
                                            <div class="form-floating" style="width: 300px">
                                                <select id="robotSelect" class="form-select" asp-items="ViewBag.RobotList">
                                                    <option value="">Pilih Nama Robot</option>
                                                </select>
                                                <label for="RobotId">Nama Robot</label>
                                            </div>
                                        </div>
                                        <div class="col-md-1 me-2">
                                            <input type="number" id="jumlahQrInput" name="jumlahQr" class="form-control mb-2 rounded" style="width: 80px; height: 40px;" value="1" min="1" />
                                            <div>Jumlah QR:</div>
                                        </div>
                                        <button type="button" class="btn btn-primary" style="width: 90px; height: 70px;" onclick="printQRCodePdf()">
                                            Print PDF QR
                                        </button>
                                    }
                                </div>
                            @if (Model.Inventory != null)
                            {
                               <div class="row mb-4 text-center" style="margin-top: 30px;">
                                    <!-- OK Section -->
                                    <div class="col-md-3 mb-3">
                                        <strong><h5>Total Qty OK:</h5></strong>
                                        <div class="bg-success text-white rounded py-2 fw-bold mt-1">
                                            <h5 id="ok-count">@ViewBag.TotalOk pcs</h5>
                                        </div>

                                        <div class="mt-2" style="margin-bottom: 65px;"></div>

                                        <div class="d-flex gap-4 mt-8">
                                            <div id="percent-ok-box"
                                                    class="bg-success text-white rounded d-flex align-items-center justify-content-center"
                                                    style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                @ViewBag.PercentOk%
                                            </div>
                                        </div>
                                    </div>

                                    <!-- POLESH Section -->
                                    <div class="col-md-3 mb-3">
                                        <strong><h5>Total Qty POLESH:</h5></strong>
                                        <div class="bg-danger text-white rounded py-2 fw-bold mt-1">
                                            <h5 id="polesh-count">@ViewBag.TotalPolesh pcs</h5>
                                        </div>

                                        <!-- Buttons Detail -->
                                        <div class="mt-2 d-flex gap-2">
                                            <button class="btn btn-primary">Check Detail</button>
                                            <button class="btn btn-secondary" asp-controller="Report" asp-action="DailyReport">Report</button>
                                        </div>

                                        <div class="mt-2" style="margin-bottom: 20px;"></div>

                                        <!-- Button + Percent -->
                                        <div class="mt-8 d-flex gap-4">                                       
                                            <div id="percent-polesh"
                                                    class="bg-danger text-white rounded d-flex align-items-center justify-content-center"
                                                    style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                @ViewBag.PercentPolesh%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                                
                                @if (Model.Transaction != null)
                                {
                                    <div class="row mb-4 text-center">
                                        <!-- OK Section -->
                                        <div class="col-md-3 mb-3">
                                            <strong><h5>Total Qty OK:</h5></strong>
                                            <div class="bg-success text-white rounded py-2 fw-bold mt-1">
                                                <h5 id="ok-count">@ViewBag.TotalOk pcs</h5>
                                            </div>

                                            <div class="mt-2 d-flex gap-2">
                                                <input class="form-check-input" type="checkbox" value="true" id="isReturn" onchange="updateReturnStatus()">
                                                <label class="form-check-label" for="isReturn">
                                                    Item Balikan?
                                                </label>
                                                <input class="form-check-input" type="checkbox" value="true" id="isOppositeShit" onchange="updateOppositeShit()">
                                                <label class="form-check-label" for="isOppositeShit">
                                                    Lawan Shift?
                                                </label>
                                            </div>

                                            <div class="mt-2" style="margin-bottom: 35px;"></div>

                                            <div class="d-flex gap-4 mt-8">
                                                <button onclick="submitStatus('OK');" class="btn btn-success" style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                    OK
                                                </button>

                                                <div id="percent-ok-box"
                                                     class="bg-success text-white rounded d-flex align-items-center justify-content-center"
                                                     style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                    @ViewBag.PercentOk%
                                                </div>
                                            </div>
                                        </div>

                                        <!-- POLESH Section -->
                                        <div class="col-md-3 mb-3">
                                            <strong><h5>Total Qty POLESH:</h5></strong>
                                            <div class="bg-danger text-white rounded py-2 fw-bold mt-1">
                                                <h5 id="polesh-count">@ViewBag.TotalPolesh pcs</h5>
                                            </div>

                                            <!-- Buttons Detail -->
                                            <div class="mt-2 d-flex gap-2">
                                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ngDetailModal">Check Detail</button>
                                                <button class="btn btn-secondary" asp-controller="Report" asp-action="DailyReport">Report</button>
                                            </div>

                                            <div class="mt-2" style="margin-bottom: 20px;"></div>

                                            <!-- Button + Percent -->
                                            <div class="mt-8 d-flex gap-4">
                                                <button onclick="submitStatus('POLESH');" class="btn btn-danger d-flex align-items-center justify-content-center"
                                                        style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                    POLESH
                                                </button>

                                                <div id="percent-polesh"
                                                     class="bg-danger text-white rounded d-flex align-items-center justify-content-center"
                                                     style="width: 120px; height: 120px; font-weight: bold; font-size: 20px;">
                                                    @ViewBag.PercentPolesh%
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            @* Modal konfirmasi balikan *@
            <div class="modal fade" id="returnConfirmationModal" tabindex="-1" aria-labelledby="returnConfirmationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="returnConfirmationModalLabel">Konfirmasi Barang Balikan</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Apakah Anda yakin ini barang balikan ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                            <button type="button" class="btn btn-primary" onclick="confirmReturn()">Konfirmasi</button>
                        </div>
                    </div>
                </div>
            </div>


            @* Modal NG Detail *@
            <div class="modal fade" id="ngDetailModal" tabindex="-1" aria-labelledby="ngDetailModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ngDetailModalLabel">Detail NG Transaksi Hari Ini</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @if (ViewBag.NgDetailsForDisplay != null && (ViewBag.NgDetailsForDisplay as List<LoginMVCApp.ViewModels.NgSummaryViewModel>).Any())
                            {
                                <ul class="list-group">
                                    @foreach (var detail in ViewBag.NgDetailsForDisplay as List<LoginMVCApp.ViewModels.NgSummaryViewModel>)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @detail.Category - @detail.SubCategory
                                            <span class="badge bg-primary rounded-pill">@detail.Count pcs (@detail.Role)</span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>Tidak ada detail NG yang tercatat untuk inventory ini hari ini.</p>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mb-4">
                <script>
                    console.log("Data tidak ada di Inventory ataupu di Transaction")
                </script>
            </div>
        }
    }
    else
    {
        <div class="row mb-4">
            <script>
                console.log("Data tidak ada")
            </script>
        </div>
    }
</div>

