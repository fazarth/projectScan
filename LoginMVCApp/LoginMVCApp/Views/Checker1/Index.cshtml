@model LoginMVCApp.Models.Inventories

@{
    ViewData["Title"] = "Checker Line - Scan Inventory";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="row mb-4">
            <div class="col-8">
                <h3>Scan Inventory Checker</h3>
                <form method="post" asp-action="ScanInventory1" class="d-flex mb-3">
                    <input type="text" name="inventoryId" class="form-control me-2" placeholder="Scan atau ketik Inventory ID" autofocus required />
                    <button type="submit" class="btn btn-primary">SCAN</button>
                </form>
            </div>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="p-4 text-center rounded bg-info text-dark fw-bold border border-dark">
                @TempData["Message"]
            </div>
        }
        @if (Model != null)
        {
            <form method="post" asp-action="SubmitTransaction">
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-1">
                            <div class="card-header bg-success text-white text-center">
                                <h4 class="mb-0">@Model.PartName - @Model.Tipe [@Model.Project]</h4>
                            </div>
                            <div class="card-body bg-light">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <strong>Inventory ID:</strong> <span>@Model.InvId</span>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <strong>Type:</strong> <span>@Model.Tipe</span>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Color:</strong> <span>@Model.Warna</span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6 text-end">
                                        <div class="form-floating mb-3">
                                            <select name="RobotId" class="form-select" asp-items="ViewBag.RobotList">
                                                <option value="">Pilih Nama Robot</option>
                                            </select>
                                            <label for="RobotId">Nama Robot</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <strong>Barcode:</strong> <span>@Model.Barcode</span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Part No:</strong> <span>@Model.PartNo</span>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <strong>Part Name:</strong> <span>@Model.PartName</span>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <strong>Total Qty OK:</strong> <span class="text-success"> pcs</span>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <strong>Total Qty NG:</strong> <span class="text-danger"> pcs</span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between mt-4">
                                    <div class="d-flex align-items-center gap-3">
                                        @{
                                            var percentOK = TempData["PercentOK"]?.ToString() ?? "0.0";
                                        }
                                        <button name="status" value="OK" class="btn btn-success d-flex align-items-center justify-content-center"
                                                style="width: 80px; height: 80px; font-weight: bold; font-size: 20px;">
                                            OK
                                        </button>
                                        <div class="bg-success text-white text-center rounded mx-2 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-weight: bold; font-size: 20px;">
                                            @percentOK%
                                        </div>
                                    </div>
                                    <button name="status" value="POLESH" class="btn btn-danger btn-lg w-48">POLESH</button>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-12 text-center mb-5">
                                    <a asp-controller="Inventory" asp-action="DownloadBarcode" asp-route-id="@Model.InvId" class="btn btn-info btn-lg">Download Barcode</a>
                                    <a asp-controller="Inventory" asp-action="DownloadPDF" asp-route-id="@Model.InvId" class="btn btn-info btn-lg ms-2">Download PDF</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>