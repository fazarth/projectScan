@{
    ViewData["Title"] = "Production Dashboard";
}

<!-- Keterangan -->

<div class="container-fluid py-3">
    <div class="fullscreen-tip mb-3">Tekan <b>F</b> untuk fullscreen • Halaman akan refresh otomatis tiap 60 detik</div>
    <div class="row mb-2 border border-success rounded bg-dark">
        <!-- Header -->
        <div class="row mb-1">
            <div class="text-light col text-center">
                <h2 class="mt-3 fw-bold">CHECKER</h2>
            </div>
        </div>

        <!-- Main Grid -->
        <div class="row g-3">
            <!-- Plan Produksi -->
            <div class="col-md-3">
                <div class="border border-success text-center p-3 text-light">
                    <div class="bg-danger fw-bold text-white py-1 mb-2">PLAN PRODUKSI</div>
                    <div class="display-4 fw-bold">318</div>
                </div>
            </div>

            <!-- Checker Info -->
            <div class="col-md-6">
                <div class="row g-2">
                    <div class="col-6">
                        <div class="border border-success text-center p-2">
                            <div class="text-danger fw-bold">TARGET</div>
                            <div class=" text-lightfs-3">000</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border border-success text-center p-2">
                            <div class="text-danger fw-bold">ACHIVE</div>
                            <div class="text-light fs-3">000</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border border-success text-center p-2">
                            <div class="text-light">PRODUCTIVITY</div>
                            <div class="fs-3 text-warning">100%</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-light border border-success text-center p-2">
                            <div>+5% / -5%</div>
                            <div class="fs-3">0%</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border border-success text-center p-2">
                            <div class="text-info fw-bold">S/PASS</div>
                            <div class="fs-3 text-success">96%</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border border-success text-center p-2">
                            <div class="text-light">POLESH</div>
                            <div class="fs-3 text-warning">15%</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Polesh OK & Repair -->
            <div class="col-md-3">
                <div class="border border-info text-center p-3 mb-3">
                    <div class="bg-warning text-light fw-bold mb-2">OK</div>
                    <div class="text-light fs-2">000</div>
                </div>
                <div class="border border-info text-center p-3">
                    <div class="bg-danger text-light fw-bold mb-2">REPAIR</div>
                    <div class="text-light fs-2">000</div>
                </div>
            </div>
        </div>

        <!-- Operator & QC Box -->
        <div class="row mt-4">
            <div class="col-md-12 d-flex flex-wrap gap-3 justify-content-between">
                <!-- OPR & QC Cards -->
                <div class="border border-info p-2 text-center text-light">
                    <div>OPR1</div>
                    <div class="text-success">OK</div>
                    <div class="text-danger">REPAIR</div>
                </div>
                <div class="border border-info p-2 text-center text-light">
                    <div>OPR2</div>
                    <div class="text-success">OK</div>
                    <div class="text-danger">REPAIR</div>
                </div>
                <div class="border border-info p-2 text-center text-light">
                    <div>OPR3</div>
                    <div class="text-success">OK</div>
                    <div class="text-danger">REPAIR</div>
                </div>
                <div class="border border-info p-2 text-center text-light">
                    <div>QC01</div>
                    <div class="text-primary">OK_C</div>
                    <div class="text-warning">OK_PLS</div>
                </div>
                <div class="border border-info p-2 text-center text-light">
                    <div>QC02</div>
                    <div class="text-primary">OK_C</div>
                    <div class="text-warning">OK_PLS</div>
                </div>
            </div>
        </div>

        <!-- Bottom Result Summary -->
        <div class="row text-center mt-4 g-2 text-light">
            <div class="col border border-success py-2">
                <div>SP QC OK</div>
                <div class="fs-4">0</div>
                <div>0%</div>
            </div>
            <div class="col border border-success py-2">
                <div>POL QC OK</div>
                <div class="fs-4">0</div>
                <div>0%</div>
            </div>
            <div class="col border border-danger py-2">
                <div>REPAIR</div>
                <div class="fs-4">0</div>
                <div>0%</div>
            </div>
            <div class="col border border-dark py-2">
                <div>TOTAL</div>
                <div class="fs-4">0</div>
                <div>0%</div>
            </div>
            <div class="col border border-success py-2">
                <div>OK PART</div>
                <div class="small">TARGET: 95%</div>
                <div class="small">ACHIVE: 000</div>
                <div class="small">0%</div>
            </div>
        </div>
    </div>
</div>


<!-- Script -->
<script>
    // Auto-refresh per 60 detik
    setTimeout(() => {
        window.location.reload();
    }, 60000);

    // Tekan F untuk fullscreen
    document.addEventListener("keydown", function (e) {
        if (e.key === "f" || e.key === "F") {
            document.documentElement.requestFullscreen();
        }
    });
</script>