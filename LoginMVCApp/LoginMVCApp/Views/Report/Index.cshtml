@{
    ViewData["Title"] = "Production Dashboard";
}

<!-- Keterangan -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial Black', Arial, sans-serif;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: white;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: #000;
            border: 3px solid #00ff00;
            padding: 10px;
        }

        .header-info {
            background: #ffff00;
            color: #000;
            padding: 8px;
            text-align: right;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .main-grid {
            display: grid;
            grid-template-columns: 200px 1fr 200px 250px;
            border: 2px solid #fff;
        }

        .cell {
            border: 1px solid #fff;
            padding: 15px;
            text-align: center;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 50px;
        }

        /* Plan Produksi Column */
        .plan-header {
            background: #ff00ff;
            color: white;
            font-size: 16px;
            writing-mode: horizontal-tb;
        }

        .plan-318 {
            background: #000;
            color: white;
            font-size: 32px;
            font-weight: bold;
        }

        .plan-productivity {
            background: #ff00ff;
            color: white;
            font-size: 14px;
        }

        .plan-tolerance {
            background: #000;
            color: white;
            font-size: 14px;
        }

        .plan-spass {
            background: #ff00ff;
            color: white;
            font-size: 14px;
        }

        .plan-polesh {
            background: #ff00ff;
            color: white;
            font-size: 14px;
        }

        /* Checker Section */
        .checker-header {
            background: #000;
            color: white;
            font-size: 24px;
            font-weight: bold;
            grid-column: span 2;
        }

        .target-header {
            background: #ff00ff;
            color: white;
            font-size: 16px;
        }

        .active-header {
            background: #ff00ff;
            color: white;
            font-size: 16px;
        }

        .target-5 {
            background: #000;
            color: white;
            font-size: 24px;
        }

        .active-000 {
            background: #000;
            color: white;
            font-size: 24px;
        }

        .target-100 {
            background: #000;
            color: white;
            font-size: 20px;
        }

        .active-0 {
            background: #000;
            color: #ff00ff;
            font-size: 20px;
        }

        .target-96 {
            background: #000;
            color: #00ff00;
            font-size: 20px;
        }

        .target-15 {
            background: #000;
            color: #ffff00;
            font-size: 20px;
        }

        /* Polesh Section */
        .polesh-header {
            background: #ffff00;
            color: #000;
            font-size: 20px;
            font-weight: bold;
        }

        .ok-header {
            background: #ffff00;
            color: #000;
            font-size: 16px;
        }

        .repair-header {
            background: #ff4500;
            color: white;
            font-size: 16px;
        }

        .ok-value {
            background: #000;
            color: #ffff00;
            font-size: 24px;
            border: 2px solid #ffff00;
        }

        .repair-value {
            background: #000;
            color: #ff4500;
            font-size: 24px;
            border: 2px solid #ff4500;
        }

        .polesh-data {
            background: #000;
            color: #00ff00;
            font-size: 20px;
        }

        .empty-cell {
            background: #000;
        }

        /* Right Panel */
        .right-panel {
            background: #4169e1;
            padding: 10px;
        }

        .opr-section {
            margin-bottom: 15px;
        }

        .opr-title {
            background: #000;
            color: white;
            padding: 5px;
            text-align: center;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .opr-values {
            display: flex;
            gap: 5px;
        }

        .ok-btn {
            background: #00ff00;
            color: #000;
            padding: 5px 10px;
            flex: 1;
            text-align: center;
            font-size: 12px;
        }

        .repair-btn {
            background: #ff00ff;
            color: white;
            padding: 5px 10px;
            flex: 1;
            text-align: center;
            font-size: 12px;
        }

        .value-display {
            background: #c0c0c0;
            color: #000;
            padding: 2px;
            text-align: center;
            font-size: 14px;
            font-weight: bold;
        }

        /* Bottom Summary */
        .bottom-summary {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            border: 2px solid #fff;
            margin-top: 10px;
        }

        .summary-cell {
            border: 1px solid #fff;
            padding: 10px;
            text-align: center;
            font-weight: bold;
        }

        .sp-qc-ok {
            background: #000;
        }

        .sp-qc-title {
            color: #00ff00;
            font-size: 14px;
        }

        .sp-qc-value {
            color: #00ff00;
            font-size: 24px;
        }

        .sp-qc-percent {
            color: #00ff00;
            font-size: 16px;
        }

        .pol-qc-ok {
            background: #000;
        }

        .pol-qc-title {
            color: #ffff00;
            font-size: 14px;
        }

        .pol-qc-value {
            color: #ffff00;
            font-size: 24px;
        }

        .pol-qc-percent {
            color: #ffff00;
            font-size: 16px;
        }

        .repair-summary {
            background: #000;
        }

        .repair-title {
            color: #ff4500;
            font-size: 14px;
        }

        .repair-value {
            color: #ff4500;
            font-size: 24px;
        }

        .repair-percent {
            color: #ff4500;
            font-size: 16px;
        }

        .total-summary {
            background: #000;
        }

        .total-title {
            color: white;
            font-size: 14px;
        }

        .total-value {
            color: white;
            font-size: 24px;
        }

        .total-percent {
            color: white;
            font-size: 16px;
        }

        .ok-part {
            background: #000;
        }

        .ok-part-title {
            color: #00ff00;
            font-size: 14px;
        }

        .target-label {
            background: #808080;
            color: #000;
            padding: 2px;
            font-size: 10px;
        }

        .active-label {
            background: #00ff00;
            color: #000;
            padding: 2px;
            font-size: 10px;
        }

        .ok-part-target {
            color: white;
            font-size: 14px;
        }

        .ok-part-value {
            color: #00ff00;
            font-size: 20px;
        }

        .ok-part-percent {
            color: #00ff00;
            font-size: 16px;
        }
        .active-0 {
            animation: blink 2s infinite;
        }

        .bottom-summary {
            grid-template-columns: 1fr;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Info -->
        <div class="header-info">
            TEMP: 0°C &nbsp;&nbsp;&nbsp; Selasa, 19/06/2012 &nbsp;&nbsp;&nbsp; 09:08:30
        </div>

        <!-- Main Grid -->
        <div class="main-grid">
            <!-- Plan Produksi Column -->
            <div class="cell plan-header">PLAN<br>PRODUKSI</div>
            <div class="cell checker-header">CHECKER</div>
            <div class="cell polesh-header">POLESH</div>

            <!-- Row 2 -->
            <div class="cell plan-318">318</div>
            <div class="cell target-header">TARGET</div>
            <div class="cell active-header">ACHIVE</div>
            <div class="cell plan-productivity">PRODUCTIVITY</div>
            <div class="cell plan-tolerance">+5%/-5%</div>
            @* <div class="cell ok-header">OK</div> *@
            @* <div class="cell repair-header">REPAIR</div> *@

            <!-- Row 3 -->
            <div class="cell target-5">5</div>
            <div class="cell active-000">000</div>
            <div class="cell ok-value">000</div>
            <div class="cell repair-value">000</div>

            <!-- Row 4 -->
            <div class="cell target-100">100%</div>
            <div class="cell active-0">0%</div>
            <div class="cell empty-cell"></div>
            <div class="cell empty-cell"></div>

            <!-- Row 5 -->
            <div class="cell plan-spass">S/PASS</div>
            <div class="cell target-96">96%</div>
            <div class="cell active-0">0%</div>
            <div class="cell polesh-data">000</div>
            <div class="cell empty-cell"></div>

            <!-- Row 6 -->
            <div class="cell plan-polesh">POLESH</div>
            <div class="cell target-15">15%</div>
            <div class="cell active-0">0%</div>
            <div class="cell polesh-data">000</div>
            <div class="cell empty-cell"></div>
        </div>

        <!-- Right Panel -->
        <div style="position: absolute; right: 20px; top: 280px; width: 200px;">
            <div class="right-panel">
                <div class="opr-section">
                    <div class="opr-title">OPR1</div>
                    <div class="opr-values">
                        <div class="ok-btn">OK</div>
                        <div class="repair-btn">REPAIR</div>
                    </div>
                    <div class="value-display">0 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0</div>
                </div>

                <div class="opr-section">
                    <div class="opr-title">OPR2</div>
                    <div class="opr-values">
                        <div class="ok-btn">OK</div>
                        <div class="repair-btn">REPAIR</div>
                    </div>
                    <div class="value-display">0 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0</div>
                </div>

                <div class="opr-section">
                    <div class="opr-title">OPR3</div>
                    <div class="opr-values">
                        <div class="ok-btn">OK</div>
                        <div class="repair-btn">REPAIR</div>
                    </div>
                    <div class="value-display">0 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0</div>
                </div>

                <div class="opr-section">
                    <div class="opr-title">QC01</div>
                    <div class="opr-values">
                        <div class="ok-btn">OK_C</div>
                        <div class="repair-btn">OK_PLS</div>
                    </div>
                    <div class="value-display">0 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0</div>
                </div>

                <div class="opr-section">
                    <div class="opr-title">QC02</div>
                    <div class="opr-values">
                        <div class="ok-btn">OK_C</div>
                        <div class="repair-btn">OK_PLS</div>
                    </div>
                    <div class="value-display">0 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0</div>
                </div>
            </div>
        </div>

        <!-- Bottom Summary -->
        <div class="bottom-summary">
            <div class="summary-cell sp-qc-ok">
                <div class="sp-qc-title">SP QC OK</div>
                <div class="sp-qc-value">0</div>
                <div class="sp-qc-percent">0%</div>
            </div>

            <div class="summary-cell pol-qc-ok">
                <div class="pol-qc-title">POL QC OK</div>
                <div class="pol-qc-value">0</div>
                <div class="pol-qc-percent">0%</div>
            </div>

            <div class="summary-cell repair-summary">
                <div class="repair-title">REPAIR</div>
                <div class="repair-value">0</div>
                <div class="repair-percent">0%</div>
            </div>

            <div class="summary-cell total-summary">
                <div class="total-title">TOTAL</div>
                <div class="total-value">0</div>
                <div class="total-percent">0%</div>
            </div>

            <div class="summary-cell ok-part">
                <div class="ok-part-title">OK PART</div>
                <div style="display: flex; gap: 5px; margin: 5px 0;">
                    <span class="target-label">TARGET</span>
                    <span class="active-label">ACHIVE</span>
                </div>
                <div class="ok-part-target">95%</div>
                <div class="ok-part-value">000</div>
                <div class="ok-part-percent">0%</div>
            </div>
        </div>
    </div>

    <script>
        // Auto-refresh every 60 seconds
        setTimeout(() => {
            window.location.reload();
        }, 60000);

        // Press F for fullscreen
        document.addEventListener("keydown", function (e) {
            if (e.key === "f" || e.key === "F") {
                if (document.fullscreenElement) {
                    document.exitFullscreen();
                } else {
                    document.documentElement.requestFullscreen();
                }
            }
        });

        // Simulate real-time updates
        function updateData() {
            const activeElements = document.querySelectorAll('.active-0');
            activeElements.forEach(element => {
                if (Math.random() > 0.9) {
                    const newValue = Math.floor(Math.random() * 10);
                    if (element.textContent.includes('%')) {
                        element.textContent = newValue + '%';
                    } else {
                        element.textContent = newValue.toString().padStart(3, '0');
                    }
                }
            });
        }

        // Update every 5 seconds
        setInterval(updateData, 5000);

        // Add click effects
        const cells = document.querySelectorAll('.cell');
        cells.forEach(cell => {
            cell.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 100);
            });
        });
    </script>
</body>
</html>

