@model LoginMVCApp.Models.Users

@{
    ViewBag.Title = "Detail Pengguna";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-white shadow rounded p-4">
                <h3 class="mb-4 text-center text-primary">Users Details</h3>

                <div class="mb-3">
                    <strong>Fullname:</strong>
                    <div class="form-control-plaintext">@Model.FullName</div>
                </div>

                <div class="mb-3">
                    <strong>Email:</strong>
                    <div class="form-control-plaintext">@Model.Email</div>
                </div>

                <div class="mb-3">
                    <strong>PhoneNumber:</strong>
                    <div class="form-control-plaintext">@Model.PhoneNumber</div>
                </div>

                <div class="mb-3">
                    <strong>Line:</strong>
                    <div class="form-control-plaintext">@Model.LineId</div>
                </div>

                <div class="mb-3">
                    <strong>Role:</strong>
                    <div class="form-control-plaintext">@Model.Role</div>
                </div>

                <div class="mb-3">
                    <strong>Status:</strong>
                    <div class="form-control-plaintext">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Nonaktif</span>
                        }
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>