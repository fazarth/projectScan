@model LoginMVCApp.ViewModels.EditUserViewModel;

@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="bg-white shadow rounded p-4">
                <h3 class="mb-4 text-center text-primary">Edit User</h3>

                <form asp-action="Edit" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="FullName" />
                        <label asp-for="FullName"></label>
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="PhoneNumber" />
                        <label asp-for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="ConfirmPassword" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="LineId" class="form-select" asp-items="ViewBag.Lines">
                            <option value="">Pilih Line</option>
                        </select>
                        <label asp-for="LineId"></label>
                        <span asp-validation-for="LineId" class="text-danger small"></span>
                    </div>


                    <div class="form-floating mb-3">
                        <select asp-for="Role" class="form-select">
                            <option value="">Pilih Role</option>
                            <option>Admin</option>
                            <option>Checker</option>
                            <option>Poles</option>
                            <option>Report</option>
                        </select>
                        <label asp-for="Role"></label>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="UserGroup" class="form-select">
                            <option value="">Pilih UserGroup</option>
                            <option>A</option>
                            <option>B</option>
                        </select>
                        <label asp-for="UserGroup"></label>
                        <span asp-validation-for="UserGroup" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Simpan</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Index" class="text-muted small">‚Üê Back to List</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
